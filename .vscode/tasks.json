{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Configure debug",
            "options": {
                "cwd": "${workspaceRoot}/build-debug"
            },
            "command": "cmake",
            "args": [
                "-G",
                "'Ninja'",
                "-DCMAKE_BUILD_TYPE=Debug",
                "./.."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Configure release",
            "options": {
                "cwd": "${workspaceRoot}/build-release"
            },
            "command": "cmake",
            "args": [
                "-G",
                "'Ninja'",
                "-DCMAKE_BUILD_TYPE=Release",
                "./.."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build debug",
            "options": {
                "cwd": "${workspaceRoot}/build-debug"
            },
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build release",
            "options": {
                "cwd": "${workspaceRoot}/build-release"
            },
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}